<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity"
    android:layout_margin="12dp">


    <TextView
        android:id="@+id/bluetoothStateLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/bluetoothStateValue"
        app:layout_constraintBottom_toTopOf="@id/airplaneModeStateLabel"
        android:text="@string/label_bluetooth_state" />

    <TextView
        android:id="@+id/bluetoothStateValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/bluetoothStateLabel"
        app:layout_constraintBottom_toBottomOf="@id/bluetoothStateLabel"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/bluetoothStateLabel"
        android:text="@string/state_unknown" />


    <TextView
        android:id="@+id/airplaneModeStateLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/bluetoothStateLabel"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/airplaneModeStateValue"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/label_airplane_mode_state" />

    <TextView
        android:id="@+id/airplaneModeStateValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/airplaneModeStateLabel"
        app:layout_constraintBottom_toBottomOf="@id/airplaneModeStateLabel"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/airplaneModeStateLabel"
        android:text="@string/state_unknown" />


</androidx.constraintlayout.widget.ConstraintLayout>